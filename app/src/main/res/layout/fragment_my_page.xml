<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyPageFragment">

    <LinearLayout
        android:id="@+id/fragment_my_page_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/all_container_round_edge"
        android:elevation="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/fragment_my_page_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#00ff0000"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="@string/sign_in"
            android:textColor="@color/main_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fragment_my_page_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#00ff0000"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="@string/sign_up"
            android:textColor="@color/main_blue"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/fragment_my_page_tv_change_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_info"
        android:textColor="?colorPrimary"
        android:textStyle="bold"

        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_my_page_container1" />

    <LinearLayout
        android:id="@+id/fragment_my_page_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/all_container_round_edge"
        android:elevation="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_my_page_tv_change_info">

        <Button
            android:id="@+id/fragment_my_page_btn_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#00ff0000"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="@string/setting"
            android:textColor="@color/main_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fragment_my_page_btn_alarm_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#00ff0000"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="@string/alarm_setting"
            android:textColor="@color/main_blue"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>