<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShipSearchActivity">

    <TextView
        android:id="@+id/activity_ship_search_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선박 정보"
        android:textColor="?colorPrimary"
        android:textStyle="bold"

        android:layout_marginTop="30dp"
        android:layout_marginStart="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/activity_ship_search_spn_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:spinnerMode="dropdown"
        android:minHeight="48dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_ship_search_tv_info" />

    <EditText
        android:id="@+id/activity_ship_search_et_shipid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/main_blue"
        android:ems="20"

        android:hint="선박 ID"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/main_blue"
        android:textColorHint="@color/main_blue"
        app:layout_constraintTop_toBottomOf="@id/activity_ship_search_spn_type"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/activity_ship_search_btn_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"

        android:background="@drawable/all_btn_round_edge"
        android:text="정보 확인"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/activity_ship_search_et_shipid"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/activity_ship_search_tv_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_ship_search_btn_search"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/activity_ship_search_btn_result"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"

        android:background="@drawable/all_btn_round_edge"
        android:text="위치 확인"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/activity_ship_search_tv_search_result"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>