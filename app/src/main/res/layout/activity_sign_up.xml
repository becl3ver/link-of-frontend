<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/activity_sign_up_et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/main_blue"
                android:ems="20"

                android:hint="@string/name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/main_blue"
                android:textColorHint="@color/main_blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/activity_sign_up_et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/main_blue"
                android:ems="20"

                android:hint="@string/id"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/main_blue"
                android:textColorHint="@color/main_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_et_name" />

            <TextView
                android:id="@+id/activity_sign_up_tv_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                android:textSize="15sp"
                android:textColor="@color/red"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_sign_up_et_id"/>

            <EditText
                android:id="@+id/activity_sign_up_et_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/main_blue"
                android:ems="20"

                android:hint="@string/nickname"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/main_blue"
                android:textColorHint="@color/main_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_tv_id" />

            <Button
                android:id="@+id/activity_sign_up_btn_id_check"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"

                android:background="@drawable/all_btn_round_edge"
                android:text="@string/duplication_check"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_et_nickname" />

            <EditText
                android:id="@+id/activity_sign_up_et_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/main_blue"
                android:ems="20"

                android:hint="@string/mail"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColor="@color/main_blue"
                android:textColorHint="@color/main_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_sign_up_btn_id_check" />

            <Button
                android:id="@+id/activity_sign_up_btn_mail_check"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="30dp"

                android:background="@drawable/all_btn_round_edge"
                android:text="@string/mail_send"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_sign_up_et_mail" />

            <EditText
                android:id="@+id/activity_sign_up_et_mail_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/main_blue"
                android:ems="20"

                android:hint="@string/mail_code"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="@color/main_blue"
                android:textColorHint="@color/main_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_btn_mail_check" />

            <TextView
                android:id="@+id/activity_sign_up_tv_timer_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_blue"
                android:textSize="14sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"

                app:layout_constraintTop_toBottomOf="@id/activity_sign_up_et_mail_code"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/activity_sign_up_tv_timer_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_blue"
                android:textSize="14sp"
                android:layout_marginTop="10dp"

                app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_et_mail_code"
                app:layout_constraintStart_toEndOf="@+id/activity_sign_up_tv_timer_minute" />

            <Button
                android:id="@+id/activity_sign_up_btn_mail_code_check"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:enabled="false"

                android:background="@drawable/all_btn_round_edge_disabled"
                android:text="@string/mail_check"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/activity_sign_up_tv_timer_minute"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/activity_sign_up_et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/main_blue"
                android:ems="20"

                android:hint="@string/password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="@color/main_blue"
                android:textColorHint="@color/main_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_sign_up_btn_mail_code_check"/>

            <TextView
                android:id="@+id/activity_sign_up_tv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                android:textSize="15sp"
                android:textColor="@color/red"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_sign_up_et_password"/>

            <EditText
                android:id="@+id/activity_sign_up_et_password_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/main_blue"
                android:ems="20"

                android:hint="@string/password_check"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="@color/main_blue"
                android:textColorHint="@color/main_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_sign_up_tv_password"/>

            <TextView
                android:id="@+id/activity_sign_up_tv_password_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                android:textSize="15sp"
                android:textColor="@color/red"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_sign_up_et_password_check"/>

             <Button
                android:id="@+id/activity_sign_up_btn_submit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:enabled="false"

                android:background="@drawable/all_btn_round_edge_disabled"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_tv_password_check"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>